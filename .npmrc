# pnpm configuration for optimized builds

# Use shamefully-hoist for better compatibility with some packages
shamefully-hoist=true

# Prefer offline mode when possible (faster installs)
prefer-offline=true

# Use strict peer dependencies to catch issues early
strict-peer-dependencies=false

# Enable concurrent downloads
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Speed up installs by not running scripts during install
ignore-scripts=false

# Use lockfile for deterministic builds
frozen-lockfile=false

# Automatically install peer dependencies
auto-install-peers=true

# Enable side-effects cache for native modules
side-effects-cache=true

# Use faster resolution mode
resolution-mode=highest
