# Database (matches docker-compose.yml defaults)
DATABASE_URL="postgresql://operate:operate_dev@localhost:5432/operate"
DATABASE_POOL_SIZE=10

# PostgreSQL (for docker-compose)
POSTGRES_USER=operate
POSTGRES_PASSWORD=operate_dev
POSTGRES_DB=operate

# Redis
REDIS_URL="redis://localhost:6379"

# API
API_PORT=3001
API_HOST=localhost
NODE_ENV=development

# Web
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Auth
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# AI Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@operate.com

# S3/Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true

# Plaid Integration (US Banking)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox
PLAID_WEBHOOK_URL=
PLAID_REDIRECT_URI=http://localhost:3000/integrations/plaid/callback
PLAID_WEBHOOK_SECRET=
PLAID_ENCRYPTION_KEY=
PLAID_MOCK_MODE=false

# Avalara AvaTax (US Sales Tax)
AVALARA_ACCOUNT_ID=
AVALARA_LICENSE_KEY=
AVALARA_ENVIRONMENT=sandbox
AVALARA_COMPANY_CODE=DEFAULT


# TrueLayer Integration (UK Open Banking)
TRUELAYER_CLIENT_ID=
TRUELAYER_CLIENT_SECRET=
TRUELAYER_REDIRECT_URI=http://localhost:3000/integrations/truelayer/callback
TRUELAYER_WEBHOOK_URL=
TRUELAYER_WEBHOOK_SECRET=
TRUELAYER_ENCRYPTION_KEY=
TRUELAYER_SANDBOX=true
