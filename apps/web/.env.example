# === API CONFIGURATION ===
# PRODUCTION: Update to your production domain with /api/v1 suffix
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === AUTHENTICATION ===
# PRODUCTION: Update to match your production domain
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# JWT Configuration (should match API JWT_SECRET)
JWT_SECRET=your-jwt-secret-here

# === FEATURE FLAGS ===
# PRODUCTION: Always set ENABLE_DEVTOOLS=false in production
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# === ERROR TRACKING ===
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_ORG=operate
SENTRY_PROJECT_WEB=operate-web
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# === ENVIRONMENT ===
# PRODUCTION: Set to 'production' for production deployments
NODE_ENV=development

# === PRODUCTION DEPLOYMENT EXAMPLE ===
# Copy this template and replace your-domain.com with your actual domain:
#
# NEXT_PUBLIC_API_URL=https://your-domain.com/api/v1
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# NEXTAUTH_URL=https://your-domain.com
# NEXT_PUBLIC_ENABLE_DEVTOOLS=false
# NODE_ENV=production
