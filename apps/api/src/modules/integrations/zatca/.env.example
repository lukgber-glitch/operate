# ZATCA Certificate Management Configuration

# Master encryption key (32 bytes = 64 hex characters)
# Generate with: openssl rand -hex 32
ZATCA_MASTER_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# AWS KMS Configuration (Production)
AWS_KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012
AWS_REGION=us-east-1

# Azure Key Vault Configuration (Production)
AZURE_KEY_VAULT_URL=https://myvault.vault.azure.net
AZURE_KEY_VAULT_KEY_NAME=zatca-master-key

# ZATCA API Configuration
ZATCA_SANDBOX_URL=https://gw-fatoora.zatca.gov.sa/e-invoicing/developer-portal
ZATCA_PRODUCTION_URL=https://gw-fatoora.zatca.gov.sa/e-invoicing/core

# Certificate Renewal Settings
ZATCA_RENEWAL_WARNING_DAYS=30
ZATCA_AUTO_RENEWAL_ENABLED=true

# Logging
ZATCA_AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
ZATCA_LOG_LEVEL=info

# HSM Configuration (Production - Optional)
HSM_PARTITION_ID=partition1
HSM_PARTITION_PASSWORD=securepassword
HSM_CLIENT_CERT_PATH=/path/to/client-cert.pem
HSM_CLIENT_KEY_PATH=/path/to/client-key.pem
