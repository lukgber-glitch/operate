# ELSTER Certificate Management Configuration

# Master encryption key for certificate storage
# MUST be at least 32 characters long
# Generate a secure key with: openssl rand -base64 32
# CRITICAL: Keep this secret and never commit to version control!
ELSTER_CERT_ENCRYPTION_KEY=change-this-to-a-secure-32-char-minimum-key

# Database connection (if not set globally)
# DATABASE_URL=postgresql://user:password@localhost:5432/operate

# Optional: Certificate expiry warning threshold (days)
# ELSTER_CERT_EXPIRY_WARNING_DAYS=30

# ========================================
# tigerVAT API Configuration
# ========================================

# tigerVAT API base URL
# Production: https://api.tigervat.de/v1
# Sandbox: https://sandbox.tigervat.de/v1
TIGERVAT_BASE_URL=https://sandbox.tigervat.de/v1

# tigerVAT API key (obtain from tigerVAT dashboard)
TIGERVAT_API_KEY=your-tigervat-api-key-here

# Enable test mode (submits to sandbox environment)
TIGERVAT_TEST_MODE=true

# ========================================
# ELSTER Status Tracking Configuration
# ========================================

# Enable automatic status polling
ELSTER_POLLING_ENABLED=true

# Polling interval in milliseconds (default: 300000 = 5 minutes)
ELSTER_POLLING_INTERVAL_MS=300000

# Maximum retries for status checks (default: 20)
ELSTER_MAX_POLLING_RETRIES=20

# Delay between retries in milliseconds (default: 300000 = 5 minutes)
ELSTER_RETRY_DELAY_MS=300000
